<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.contributors.model.Contributor" />
        <variable
            name="view_model"
            type="com.example.contributors.viewModel.MainViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{() -> view_model.openDetail(item.login)}"
        tools:context=".fragments.ContributorItemFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{item.login}" />

    </FrameLayout>
</layout>